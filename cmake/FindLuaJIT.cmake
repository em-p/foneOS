    SET(LUAJIT_FIND_QUIETLY TRUE)
ENDIF( LUAJIT_INCLUDE_DIR AND LUAJIT_LIBRARY_RELEASE AND LUAJIT_LIBRARY_DEBUG )

FIND_PATH( LUAJIT_INCLUDE_DIR lua.h  )

FIND_LIBRARY(LUAJIT_LIBRARY_RELEASE NAMES lua51 )

FIND_LIBRARY(LUAJIT_LIBRARY_DEBUG NAMES lua51  HINTS /usr/lib/debug/usr/lib/ )

IF( LUAJIT_LIBRARY_RELEASE OR LUAJIT_LIBRARY_DEBUG AND LUAJIT_INCLUDE_DIR )
	SET( LUAJIT_FOUND TRUE )
ENDIF( LUAJIT_LIBRARY_RELEASE OR LUAJIT_LIBRARY_DEBUG AND LUAJIT_INCLUDE_DIR )

IF( LUAJIT_LIBRARY_DEBUG AND LUAJIT_LIBRARY_RELEASE )
	# if the generator supports configuration types then set
	# optimized and debug libraries, or if the CMAKE_BUILD_TYPE has a value
	IF( CMAKE_CONFIGURATION_TYPES OR CMAKE_BUILD_TYPE )
		SET( LUAJIT_LIBRARIES optimized ${LUAJIT_LIBRARY_RELEASE} debug ${LUAJIT_LIBRARY_DEBUG} )
	ELSE( CMAKE_CONFIGURATION_TYPES OR CMAKE_BUILD_TYPE )
    # if there are no configuration types and CMAKE_BUILD_TYPE has no value
    # then just use the release libraries
		SET( LUAJIT_LIBRARIES ${LUAJIT_LIBRARY_RELEASE} )
	ENDIF( CMAKE_CONFIGURATION_TYPES OR CMAKE_BUILD_TYPE )
ELSEIF( LUAJIT_LIBRARY_RELEASE )
	SET( LUAJIT_LIBRARIES ${LUAJIT_LIBRARY_RELEASE} )
ELSE( LUAJIT_LIBRARY_DEBUG AND LUAJIT_LIBRARY_RELEASE )
	SET( LUAJIT_LIBRARIES ${LUAJIT_LIBRARY_DEBUG} )
ENDIF( LUAJIT_LIBRARY_DEBUG AND LUAJIT_LIBRARY_RELEASE )

IF( LUAJIT_FOUND )
	MESSAGE( STATUS "Found LuaJIT header file in ${LUAJIT_INCLUDE_DIR}")
	MESSAGE( STATUS "Found LuaJIT libraries: ${LUAJIT_LIBRARIES}")
ELSE(LUAJIT_FOUND)
	MESSAGE( FATAL_ERROR "Could not find LuaJIT" )
ENDIF(LUAJIT_FOUND)
